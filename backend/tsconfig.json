{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"es6",
			"es7",
			"esnext"
		],
		"module": "NodeNext",
		"rootDir": "src" ,
		"moduleResolution": "NodeNext",
		"baseUrl": "./lib",
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"noEmit": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true ,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
	},
	"include": ["src/**/*", "src/types/*.d.ts"],
	"exclude": ["node_modules", "dist"]
}